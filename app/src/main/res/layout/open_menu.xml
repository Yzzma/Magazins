<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepage"
        android:foreground="#99000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:background="@drawable/toolbar"
        android:gravity="center">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAGAZINS"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#5D5FEF"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.3"
            android:shadowColor="#EF5DA8"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="11"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="женщины"
                app:cornerRadius="20dp"
                android:textColor="#FCDDEC"
                android:textAllCaps="false"
                android:backgroundTint="#EF5DA8"
                android:layout_marginBottom="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="дети"
                app:cornerRadius="20dp"
                android:textColor="#FCDDEC"
                android:textAllCaps="false"
                android:backgroundTint="#EF5DA8"
                android:layout_marginStart="40dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мужчины"
                app:cornerRadius="20dp"
                android:textColor="#FCDDEC"
                android:textAllCaps="false"
                android:backgroundTint="#EF5DA8"
                android:layout_marginStart="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EF5DA8"
                android:textAllCaps="false"
                android:text="Новое"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EF5DA8"
                android:textAllCaps="false"
                android:text="Одежда"
                android:textSize="14sp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EF5DA8"
                android:textAllCaps="false"
                android:text="Аксессуары"
                android:textSize="14sp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EF5DA8"
                android:textAllCaps="false"
                android:text="Бренды"
                android:textSize="14sp"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вверх"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#5D5FEF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Топы"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Футболки"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Кардиганы"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Туники"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Блузки"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Низ"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#5D5FEF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Штаны"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Джинсы"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Юбка"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Шорты"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Гетры"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вечерние платья"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Свадебные"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Комбинезоны"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Врехняя одежда"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#5D5FEF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пальто"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Куртки"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пуховики"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Накидки"
                    android:layout_marginTop="8dp"
                    android:textColor="#EF5DA8"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПОИСК"
                android:textSize="10sp"
                android:textColor="#5D5FEF"
                android:drawableLeft="@drawable/ic_search" />
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fitsSystemWindows="true"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>