<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.MaterialToolbar
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAGAZINS"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#5D5FEF"
                    android:letterSpacing="0.3"
                    android:shadowColor="#EF5DA8"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="11"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="женщины"
                    app:cornerRadius="20dp"
                    android:textColor="#FCDDEC"
                    android:textAllCaps="false"
                    android:backgroundTint="#EF5DA8"
                    android:layout_marginBottom="10dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="дети"
                    app:cornerRadius="20dp"
                    android:textColor="#FCDDEC"
                    android:textAllCaps="false"
                    android:backgroundTint="#EF5DA8"
                    android:layout_marginStart="40dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="мужчины"
                    app:cornerRadius="20dp"
                    android:textColor="#FCDDEC"
                    android:textAllCaps="false"
                    android:backgroundTint="#EF5DA8"
                    android:layout_marginStart="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EF5DA8"
                    android:textAllCaps="false"
                    android:text="Новое"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EF5DA8"
                    android:textAllCaps="false"
                    android:text="Одежда"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EF5DA8"
                    android:textAllCaps="false"
                    android:text="Аксессуары"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EF5DA8"
                    android:textAllCaps="false"
                    android:text="Бренды"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="800px"
                    android:layout_height="400px"
                    android:background="@drawable/collection"/>
                <ImageButton
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center"
                    android:background="@drawable/arrow_foreground"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НОВОЕ"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#EF5DA8"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:background="@drawable/first"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5D5FEF"
                        android:textSize="10sp"
                        android:text="женский\nкостюм"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="110dp"

                        android:background="@drawable/second"/>
                    <TextView
                        android:textColor="#5D5FEF"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="обувь"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:background="@drawable/thirt"/>
                    <TextView
                        android:textColor="#5D5FEF"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Мужские\nджинсы"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EF5DA8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Безопасный\nспособ\nопалты"
                    android:textSize="8sp"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    app:icon="@drawable/ic_outline_lock"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/materialButton5"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:gravity="start"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="обслужива\nние клиентов"
                    android:textSize="8sp"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    app:icon="@drawable/ic_outline_phone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/materialButton5"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Быстрая\nдоставка"
                    android:textSize="8sp"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    app:icon="@drawable/ic_baseline_bike"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    app:layout_constraintTop_toBottomOf="@+id/materialButton5"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EF5DA8"/>
        </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fitsSystemWindows="true"
            app:itemIconSize="30dp"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/menu" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>